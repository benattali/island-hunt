<div class="container">

  <%= simple_form_for(@island) do |f| %>

    <div class="form-inputs">
      <%= f.input :name, placeholder: 'Captain Kidd\'s Island' %>
      <%= f.input :location, placeholder: 'Caribbean Islands' %>
      <%= f.input :activities, placeholder: 'A detailed description of the treasure hunt' %>
      <%= f.input :size, placeholder: '200 kmÂ²' %>
      <%= f.input :price, placeholder: '$$$$$' %>
      <%= f.input :difficulty, :collection => %w[Easy Medium Hard] %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>

    <% if current_page?(new_island_path) %>
      <div class="form-actions d-flex justify-content-center">
        <%= f.button :submit, value: "Add", class: "btn-gold w-50 my-2 btn-text" %>
      </div>
    <% else %>
      <div class="form-actions d-flex justify-content-center">
        <%= f.button :submit, value: "Edit", class: "btn-gold w-50 my-2 btn-text" %>
      </div>
    <% end %>
  <% end %>

  <% if policy(@island).destroy? %>
    <%= link_to island_path(@island), method: :delete, class: "btn btn-secondary" do %>
      Remove island
    <% end %>
  <% end %>

</div>
