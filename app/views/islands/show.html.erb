<div class="banner-show" style="background-image: linear-gradient(360deg, rgb(50,54,57) 0%, rgba(243,182,201,0) 20%, rgba(243,182,201,0) 80%, rgb(50,54,57) 100%), url( <%= @island.photo %> );">
</div>

<div class="container mt-3">
  <div class="col-sm-12 col-md-7 col-lg-8 mb-3">
    <div class="card-name-price">
      <div class="card-name-location">
        <h1> <%= @island.name %> </h1>
        <h3> <%= @island.location %> | <%= @island.difficulty %> </h3>
      </div>
      <div class="card-price-size">
        <h3> Price: $<%= @island.price %> </h3>
        <h3> Size: <%= @island.size %> kmÂ²</h3>
      </div>
    </div>
    <br>
    <h4><strong>Description:</strong></h4>
    <h5> <%= @island.activities %> </h5>
  </div>
  <div class="index-position">
      <% if !policy(@island).edit? %>
        <div id="booking-card">
          <%= render 'bookings/form' %>
        </div>
      <% else %>
        <div class="container-buttons">
          <%= link_to edit_island_path(@island), class: "btn btn-outline-primary w-50 mb-1" do %>
            Edit
          <% end %>
          <%= link_to islands_path, class: "btn btn-outline-secondary w-50" do %>
            Back
          <% end %>
        </div>
      <% end %>
    <% if !policy(@island).edit? %>
      <div class="d-flex justify-content-between">
          <%= link_to islands_path, class: "btn btn-outline-secondary w-100" do %>
            Back
          <% end %>
      </div>
    <% end %>
  </div>
</div>

<div
  id="map"
  style="width: 100%;
  height: 75vh;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
