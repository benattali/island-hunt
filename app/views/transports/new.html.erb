<div class="container my-3">
  <div class="row">
    <div class="col-sm-12 col-md-10 offset-md-1">

      <h3 class="text-center">Congratulations, your booking for <strong><%= @island.name %></strong> has been confirmed! </h3>
      <br>
      <h5> Customize your transportation method </h5>


      <% @transports.each do |transport| %>
        <div class="card-product">
        <img src=" <%= transport.photo%> ">
        <div class="card-product-infos">
          <div class="d-flex justify-content-between">
            <h2> <%= transport.name %> </h2>
            <h2>$ <%= transport.price %> </h2>
          </div>
          <div class="d-flex justify-content-between">
            <p><%= transport.description %></p>
            <%= link_to "Select", island_transports_path(@island, @booking, t_id: transport.id),method: :post, class:"btn btn-primary"  %>
          </div>
        </div>
      </div>
      <% end %>

      <br>

      <%= link_to "No Thanks", island_transports_path(@island, @booking, t_id: nil),method: :post, class: "btn btn-outline-primary btn-lg" %>
    </div>
  </div>
</div>

