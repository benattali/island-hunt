<div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <h2>New Booking</h2>

    <%= simple_form_for([@island, @booking]) do |f| %>
      <%= f.input :start_date, as: :string, placeholder: "From", input_html: {class: "datepicker", id:"start_date"} %>
      <%= f.input :end_date, as: :string, placeholder: "To", input_html: {class: "datepicker", id: "end_date"} %>
      <%= f.button :submit, "Go", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
